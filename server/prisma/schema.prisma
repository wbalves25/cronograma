generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime  @default(now())
  subjects    Subject[]
  enrollments Enrollment[]
}

model Subject {
  id       Int     @id @default(autoincrement())
  courseId Int
  name     String
  color    String  @default("#000000")
  weight   Int     @default(1)
  course   Course  @relation(fields: [courseId], references: [id])
  topics   Topic[]
}

model Topic {
  id               Int           @id @default(autoincrement())
  subjectId        Int
  name             String
  estimatedMinutes Int           @default(60)
  orderIndex       Int           @default(0)
  subject          Subject       @relation(fields: [subjectId], references: [id])
  studentTasks     StudentTask[]
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  password      String        @default("$2a$10$CwTycUXWue0Thq9StjUM0ud.g.k.1.2.3.4.5.6.7.8.9.0") // Default hash for "password" to avoid migration errors
  role          String        @default("student") // 'admin' | 'student'
  availabilities Availability[]
  enrollments   Enrollment[]
  studentTasks  StudentTask[]
}

model Availability {
  id          Int @id @default(autoincrement())
  userId      Int
  weekDay     Int // 0-6
  hoursPerDay Int
  user        User @relation(fields: [userId], references: [id])
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  userId    Int
  courseId  Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])
}

model StudentTask {
  id            Int       @id @default(autoincrement())
  userId        Int
  topicId       Int
  status        String    @default("pending") // 'pending' | 'done'
  scheduledDate DateTime?
  completedAt   DateTime?
  user          User      @relation(fields: [userId], references: [id])
  topic         Topic     @relation(fields: [topicId], references: [id])
}
